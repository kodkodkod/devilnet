<div class="container">

    <% var item = product; %>
    <%if (item) { %>

    <div class="row">
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= item.url %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">
                        <%if (item.level) { %>
                        <%= item.price %> ZomboCoins
                        <% } else { %>
                        Product price very cheap
                        <% }  %>
                    </h4>
                    <h4>
                        <a href="/product/id/<%= item.id %>">
                            <%= item.name %>
                        </a>
                    </h4>
                    <p><%= item.description %></p>
                </div>
                <%if (item.level) { %>
                <div class="ratings">
                    <p class="pull-right">Fear lever <%= item.level %></p>
                    <p>
                        <% for(var i = 0; i < item.level; i++) {%>
                        <span class="glyphicon glyphicon-star"></span>
                        <% } %>
                    </p>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <% }  %>

</div>